/* 顶部导航栏 */
cu-custom {
    position: sticky;
    top: 0;
    z-index: 999;
  }
  
  /* 容器布局 */
  .container {
    background-color: #f9f9f9;
    padding: 0; /* 去掉顶部和左边多余空隙 */
    margin: 0 auto;
  }
  
  /* 相册列表 */
  .album-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 20rpx; /* 适当的内边距让页面不拥挤 */
  }
  
  .album-item {
    width: 48%;
    margin-bottom: 20rpx;
    border-radius: 12rpx;
    background: #fff;
    box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }
  
  .album-cover {
    width: 100%;
    height: 220rpx;
    background: #e8e8e8; /* 默认图片背景 */
  }
  
  .album-name {
    text-align: center;
    font-size: 30rpx;
    padding: 15rpx;
    color: #555;
    font-weight: bold;
  }
  
  /* 左下角上传文件按钮 */
  .btn-upload {
    position: fixed;
    left: 20rpx;
    bottom: 20rpx;
    background: linear-gradient(90deg, #56ccf2, #2f80ed);
    color: #fff;
    padding: 20rpx;
    border-radius: 50%; /* 改为圆形按钮 */
    box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.2);
    font-size: 40rpx;
    text-align: center;
    line-height: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  /* 右下角添加相册按钮 */
  .btn-add {
    position: fixed;
    right: 20rpx;
    bottom: 20rpx;
    background: linear-gradient(90deg, #f093fb, #f5576c);
    color: #fff;
    padding: 20rpx;
    border-radius: 50%;
    box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.2);
    font-size: 50rpx; /* 更大号的加号 */
    text-align: center;
    line-height: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  /* 弹窗样式 */
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6); /* 调整背景透明度 */
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .modal-content {
    width: 90%;
    background: #fff;
    border-radius: 16rpx;
    padding: 30rpx;
    box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.2);
  }
  
  .modal-input {
    width: 100%;
    padding: 20rpx;
    border: 1rpx solid #ccc;
    border-radius: 12rpx;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    height: 80rpx;
  }
  
  .modal-actions {
    display: flex;
    justify-content: space-between;
    margin-top: 10rpx;
  }
  
  .btn-cancel, .btn-confirm {
    flex: 1;
    margin: 0 10rpx;
    padding: 20rpx;
    font-size: 28rpx;
    border-radius: 10rpx;
    text-align: center;
  }
  
  .btn-cancel {
    background: #ccc;
    color: #fff;
  }
  
  .btn-confirm {
    background: #007bff;
    color: #fff;
  }
  

  .loading-status {
    text-align: center;
    color: #888;
    font-size: 14px;
    margin: 20px 0;
  }
  
  .loading-text {
    color: #007AFF;
  }
  
  .no-more-text {
    color: #888;
  }
  